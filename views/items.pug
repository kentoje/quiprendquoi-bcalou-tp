ul.items
    each item, index in party.items
        li
            span= item.name
            br
            span= item.user
            form(method="post" action=`/party/${party._id}/items/${item._id}?_method=DELETE`)
                button(type="submit") Supprimer cet item
            form(method="post" action=`/party/${party._id}/items/${item._id}?_method=PATCH`)
                label(for="name-" + index) Nom de l'item
                br
                input(name="name" id="name-" + index type="text" minlength="3" placeholder="Carotte")
                br
                label(for="user-" + index) Nom de l'auteur
                br
                input(name="user" id="user-" + index type="text" minlength="3" placeholder="John Doe")
                br
                button(type="submit") Modifier l'item